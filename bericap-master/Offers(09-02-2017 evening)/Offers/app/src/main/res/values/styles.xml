<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="textview_orange_bgstyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/gradien_shape</item>
    </style>

    <style name="textview_blue_bgstyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/gradien_shape</item>
    </style>

    <style name="contentfont_textview_style">
        <item name="android:gravity">left</item>
        <item name="android:textStyle">normal</item>

        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="titlefont_textview_style">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="edittext_style">
        <item name="android:gravity">left</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="searchview_style">
        <item name="android:gravity">left</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:background">@drawable/search_style</item>
    </style>

    <style name="button_orange_bgstyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/gradien_shape</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <!--<item name="android:buttonTint">@color/app_color</item>-->
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#ffff00</item>
        <item name="colorControlActivated">#ffff00</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/_7sdp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
