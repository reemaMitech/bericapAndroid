<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#6161A1"
                android:endColor="#6161A1"
                android:angle="90" >
            </gradient>
            <corners android:radius="@dimen/_2sdp" />
        </shape>
    </item>

    <item
        android:left="@dimen/_1sdp"
        android:right="@dimen/_1sdp"
        android:top="@dimen/_1sdp"
        android:bottom="@dimen/_1sdp">
        <shape android:shape="rectangle">
            <padding
                android:bottom="@dimen/_5sdp"
                android:top="@dimen/_5sdp"
                android:right="@dimen/_5sdp"
                android:left="@dimen/_5sdp"
                >
            </padding>
            <solid android:color="@color/colorWhite"/>
            <corners android:radius="@dimen/_2sdp" />
        </shape>
    </item>
</layer-list>

