<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">


    <RelativeLayout
        android:id="@+id/payment_options_rl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/payment_offer_image"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_60sdp"
            android:padding="@dimen/_2sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_shoping" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/payment_options_rl_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/payment_options_rl_left">


        <RelativeLayout
            android:id="@+id/payment_offer_iv_discounttag_img"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_18sdp"
            android:background="@drawable/ic_discount_tag">

            <com.ecs.offers.CustomClasses.CustomTextView
                android:id="@+id/paymentoffer_tv_discounttag_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Hello"
                android:textColor="#000000"
                android:textSize="@dimen/_6sdp" />

        </RelativeLayout>

        <com.ecs.offers.CustomClasses.CustomTextView
            android:id="@+id/payment_options_tv_offer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="iPhone7"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="@color/sky_blue"
            android:textSize="@dimen/_12sdp"/>

        <com.ecs.offers.CustomClasses.CustomTextView
            android:id="@+id/payment_options_tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By Using HDFC Credit Card on Amazon"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@id/payment_options_tv_offer_name"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_10sdp"/>

        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/payment_options_tv_desc"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal">

            <com.ecs.offers.CustomClasses.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/view_more_txt"
                android:textStyle=""
                android:layout_weight="1"
                android:textColor="@color/sky_blue"
                android:textSize="@dimen/_10sdp"/>

            <com.ecs.offers.CustomClasses.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Offer Conditions"
                android:layout_weight="1"
                android:textColor="@color/sky_blue"
                android:textSize="@dimen/_10sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@id/ll_info"
            android:layout_marginRight="@dimen/_2sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_like_btn"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_offer_like"/>

            <com.ecs.offers.CustomClasses.CustomTextView
                android:id="@+id/txt_like"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                android:text="Like 200000"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_3sdp"
                android:textColor="@color/sky_blue"/>


            <ImageView
                android:id="@+id/img_compare"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_offer_compare"/>

            <com.ecs.offers.CustomClasses.CustomTextView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="wrap_content"
                android:text="Compare"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_3sdp"
                android:textColor="@color/sky_blue"/>

            <ImageView
                android:id="@+id/img_favorite"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_offer_favorite"/>

            <com.ecs.offers.CustomClasses.CustomTextView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="wrap_content"
                android:text="Favorite"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_3sdp"
                android:textColor="@color/sky_blue"/>
            <ImageView
                android:id="@+id/img_share"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_offer_share"/>

            <com.ecs.offers.CustomClasses.CustomTextView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="wrap_content"
                android:text="Share"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_3sdp"
                android:textColor="@color/sky_blue"/>

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>